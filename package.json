{
  "name": "mbp",
  "version": "0.1.0",
  "description": "Markup BoilerPlate",
  "main": "index.js",
  "repository": "https://github.com/Th0rN13/mbp.git",
  "author": "Th0rN13 <th0r@inbox.ru>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build:html": "cpx src/**/*.html build/",
    "build:js": "rollup -c",
    "build:css": "postcss src/css/*.css -d build/css/",
    "build": "npm-run-all --parallel build:*",
    "watch:html": "cpx src/**/*.html build/ -w",
    "watch:images": "cpx src/images/**/*.{png,jpg,jpeg,svg,webp} build/images/ -w",
    "watch:js": "rollup -c -w",
    "watch:css": "postcss -w src/css/*.pcss -d build/css/ --ext css",
    "serve": "sirv start build -H 0.0.0.0",
    "watch": "npm-run-all --parallel watch:*",
    "dev": "npm-run-all --parallel watch serve"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.26",
    "postcss-cli": "^6.1.3",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^1.28.0",
    "sirv-cli": "^0.4.5"
  },
  "dependencies": {}
}
